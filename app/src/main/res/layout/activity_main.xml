<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications SDK Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This demo shows how to integrate the Push Notifications SDK.\n\nThe SDK is already configured with a sample user (omripeer)."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Setup Notifications Button -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ðŸ”” Setup Notifications"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#6366F1"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- View History Button -->
    <Button
        android:id="@+id/history_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ðŸ“‹ View Notification History"
        android:textSize="16sp"
        android:backgroundTint="#10B981"
        android:textColor="@android:color/white" />

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: In a real app, you would call setCurrentUser() when a user logs in."
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="8dp" />

</LinearLayout>

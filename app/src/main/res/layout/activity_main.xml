<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6366F1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- SDK Demo Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Notifications SDK Demo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test the SDK screens:"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Notification Setup Button -->
        <Button
            android:id="@+id/btn_notification_setup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“± Notification Setup"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âš™ï¸ Settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_secondary"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <!-- Notification History Button -->
        <Button
            android:id="@+id/btn_notification_history"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“‹ Notification History"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_tertiary"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- News RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <stroke android:width="2dp" android:color="@color/primary" />
            <corners android:radius="@dimen/corner_radius_md" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_container" />
            <stroke android:width="1dp" android:color="@color/outline_variant" />
            <corners android:radius="@dimen/corner_radius_md" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <stroke android:width="1dp" android:color="@color/outline" />
            <corners android:radius="@dimen/corner_radius_md" />
        </shape>
    </item>
</selector>
